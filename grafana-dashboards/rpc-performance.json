{
  "title": "Geth RPC Performance",
  "uid": "geth-rpc-performance",
  "version": 1,
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "timezone": "browser",
  "panels": [
    {
      "id": 1,
      "type": "graph",
      "title": "RPC Latency (p95)",
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(rpc_request_duration_seconds_bucket{job=\"geth\"}[5m])) by (le))",
          "legendFormat": "p95 latency",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "seconds"
        }
      }
    },
    {
      "id": 2,
      "type": "graph",
      "title": "RPC Error Rate",
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "rate(http_requests_total{job=\"geth\", status=~\"5[0-9]{2}\"}[5m])",
          "legendFormat": "5xx errors/sec",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps"
        }
      }
    },
    {
      "id": 3,
      "type": "graph",
      "title": "RPC Success Rate",
      "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "rate(http_requests_total{job=\"geth\", status=~\"2[0-9]{2}\"}[5m])",
          "legendFormat": "2xx requests/sec",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps"
        }
      }
    }
  ]
}