{
  "title": "Node Health",
  "uid": "node-health",
  "version": 1,
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "timezone": "browser",
  "panels": [
    {
      "id": 1,
      "type": "graph",
      "title": "Block Height",
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "geth_block_height{job=\"geth\"}",
          "legendFormat": "Block Height",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "none"
        }
      }
    },
    {
      "id": 2,
      "type": "graph",
      "title": "Peer Count",
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "geth_peer_count{job=\"geth\"}",
          "legendFormat": "Peers",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "none"
        }
      }
    }
  ]
}